#include <stdio.h>
#include <stdlib.h>

int main()
{
    int matriz[4][4],c, i, soma = 0;

    for (i=0; i<4; i++)
        for (c=0; c<4; c++)
        {
            printf("Digite um numero:\n");
            scanf("%d", &matriz[i][c]);

            soma += matriz[i][c];
        }

    for (i=0; i<4; i++){
        for (c=0; c<4; c++)
        {
            printf("%d", matriz[i][c]);

        }
        printf("%d", soma);
    }



    return 0;
}
